<h1>Doses</h1>

<table>
  <thead>
    <tr>
      <th>Amount(mg)</th>
      <th>Medicine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doses.each do |dose| %>
    <tr>
      <td><%= dose.amount %></td>
      <td><%= dose.medicine.generic_name %> ( <%= dose.medicine.brand_name %> )</td>
      <td><%= link_to 'Show', dose_path(dose) %></td>
      <td><%= link_to 'Edit', edit_dose_path(dose) %></td>
      <td><%= link_to 'Destroy', [dose], method: :delete, data: { confirm: 'Are you sure?' } %></td>


    </tr>
    <% end %>
  </tbody>
</table>

<br>