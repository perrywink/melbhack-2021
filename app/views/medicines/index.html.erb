
<h2 class="text-2xl text-gray-800 text-center md:text-left font-bold mb-6">
<br>Medications in system</h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicines.each do |medicine| %>
    <tr>
      <div class="flex items-center bg-white leading-none text-blue-400 rounded-full p-2 shadow text-teal text-sm" style="margin-bottom: 10px; margin-right: 700px; width: 350px; ">
      <span class="inline-flex bg-blue-400 text-white rounded-full h-6 px-3 justify-center items-center"><%= medicine.generic_name %></span>
      <span class="inline-flex px-2"><%= medicine.brand_name %></span>

      <span ><%= link_to 'Destroy', medicine, method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-flex bg-red-300 text-white rounded-full h-6 px-3 justify-center items-center", style: "width: 50%; margin-left:25%;marin-right:25%;" %>
      </span>
      </div>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


