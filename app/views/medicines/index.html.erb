<div class="flex flex-col items-center">
  <h2 class="text-2xl text-gray-800 text-center md:text-left font-bold m-6">
    Medications in system
  </h2>

  <% @medicines.each do |medicine| %>

  <div class="flex bg-white rounded-full p-2 shadow m-3 w-1/2">
    <span class="bg-blue-400 text-white rounded-full h-6 px-3 justify-center items-center">
      <%= medicine.generic_name %>
    </span>
    <span class="px-2"><%= medicine.brand_name %></span>

    <% if current_user.admin %>
    <div>
      <%= link_to 'Edit', edit_medicine_path(medicine), class: "inline-flex bg-yellow-500 text-white rounded-full h-6 px-6 justify-center items-center" %>
      <span>
        <%= link_to 'Delete', medicine, method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-flex bg-red-500 text-white rounded-full h-6 px-4 justify-center items-center" %>
      </span>
    </div>
    <% end %>
  </div>

  <% end %>
</div>