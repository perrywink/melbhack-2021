<div class="flex items-center justify-center w-full m-3">
  <%= link_to 'Add a Patient', new_patient_path, class:"btn btn-default content-center" %>
</div>

<% @patients.each do |patient| %>
<div class="flex items-center justify-end w-full m-3">
  <div
    class="container mx-auto p-9 bg-white max-w-sm rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition duration-250">
    <img class="rounded-xl" src=<%=patient.image%> alt=image>
    <div class="flex justify-between items-center">
      <div>
        <h1 class="mt-5 text-2xl font-semibold"><%=patient.name%></h1>
        <p class="mt-2">Age: <%=patient.age%></p>
      </div>
      <div>
        <button
          class="text-white text-md font-semibold bg-blue-400 py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition duration-500 transform-gpu hover:scale-110 "><%= link_to 'Go to patient', patient %>
        </button>
      </div>
    </div>
  </div>
</div>
<% end %>