  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name , class: "block p-2 w-full text-lg appearance-none focus:outline-none bg-transparent"%>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age , class: "block p-2 w-full text-lg appearance-none focus:outline-none bg-transparent"%>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image , class: "block p-2 w-full text-lg appearance-none focus:outline-none bg-transparent"%>
  </div>

  <div class="field">
    <%= form.label :ward_number %>
    <%= form.text_field :ward_number , class: "block p-2 w-full text-lg appearance-none focus:outline-none bg-transparent"%>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "block p-2 w-full text-lg appearance-none focus:outline-none bg-transparent"%>
  </div>

  <div>
    <%= form.submit class: "py-2 ml-4 font-semibold cursor-pointer text-center focus:outline-none transition hover:shadow-lg shadow hover:bg-indigo-700 rounded-full text-white bg-indigo-600", style: "width: 50%; margin-left:25%;marin-right:25%;"%>
